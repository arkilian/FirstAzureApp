# Database Configuration (use either individual vars below or DATABASE_URL)
# If your password contains special characters, they must be URL-encoded in DATABASE_URL.
# Example encodings: @ -> %40, ! -> %21, # -> %23

# Option A: Individual variables (recommended)
DB_HOST=localhost
DB_NAME=firstazureapp
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_PORT=5432

# Option B: Single URL (uncomment and set if you prefer)
# DATABASE_URL=postgresql://user:password@host:5432/firstazureapp?sslmode=require

# Flask Configuration
FLASK_ENV=development
# Set FLASK_DEBUG=False in production for security
FLASK_DEBUG=True
