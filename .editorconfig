# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# Python files
[*.py]
indent_style = space
indent_size = 4
charset = utf-8

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2
charset = utf-8

# JSON files
[*.json]
indent_style = space
indent_size = 2
charset = utf-8

# HTML files
[*.html]
indent_style = space
indent_size = 2
charset = utf-8

# Markdown files
[*.md]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = false

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
charset = utf-8

# Bicep files
[*.bicep]
indent_style = space
indent_size = 2
charset = utf-8
